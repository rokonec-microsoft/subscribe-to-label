@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0">Change Labels Subscription</h3>
    </div>
    <div class="card-body">
        <form class="form" role="form" autocomplete="off" method="post">
            <div class="form-group">
                <label for="Labels">Labels</label>
                <input type="text" class="form-control" id="Labels" name="Labels" required placeholder="Comma-seperated labels" pattern="[^,]+(,[^,]+)*" value="@Model.Labels">
                <span id="helpResetPasswordEmail" class="form-text small text-muted">
                    You will be subscribed to these labels
                </span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg float-right">Apply</button>
            </div>
        </form>
    </div>
</div>